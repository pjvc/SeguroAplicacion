@using SeguroAplicacion.Models.ViewModels
@model SegurosViewModel
<h1>Crear Seguro</h1>
<hr />
<div class="row">
    <div class="cold-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodigoSeguro" class="control-label"></label>
                <input asp-for="CodigoSeguro" class="form-control" />
                <span asp-validation-for="CodigoSeguro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SumaAsegurada" class="control-label"></label>
                <input asp-for="SumaAsegurada" class="form-control" />
                <span asp-validation-for="SumaAsegurada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prima" class="control-label"></label>
                <input asp-for="Prima" class="form-control" />
                <span asp-validation-for="Prima" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}